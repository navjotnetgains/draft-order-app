      <div style="flex: 1 1 100%;">
        <label>Apartment / Suite</label>
        <input id="apartment" type="text" placeholder="Optional" style="width: 100%; padding: 10px 12px; border: 1px solid #c9cccf; border-radius: 6px;" />
      </div>
